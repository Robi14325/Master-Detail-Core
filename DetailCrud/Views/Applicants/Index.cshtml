@model IEnumerable<DetailCrud.Models.Applicant>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            @*    <th>
            @Html.DisplayNameFor(model => model.TotalEx)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picpath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                @*  <td>
            @Html.DisplayFor(modelItem => item.TotalEx)
            </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.IsAvailable)
                </td>
                <td>
                    @if (item.Picpath != null)
                    {
                        <img src="@Url.Content(item.Picpath)" class="img-fluid" width="90" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <table class="table table-striped table-dark">

                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Designation</th>
                                <th>TotalEx</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var it in item.ApplicantExes)
                            {
                                <tr>
                                    <td>@it.CompanyName</td>
                                    <td>@it.Designation</td>
                                    <td>@it.YearofEx</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>